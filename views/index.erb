<div class="col-md-3 col-md-offset-2">
  <div class="side row">
    <div class="col-sm-6">
      <h1><a href="/">HOME</a></h1>
    </div>
  </div>

  <div class="side row">
    <div class="col-sm-12">
      <form action="/add_contact" method="POST">
        <h1>Add Contact</h1>
        <div class="form-group">
          <label for="contact_name">Contact Name:</label>
          <input class="form-control" id="contact_name" name="contact_name">
        </div>
        <div class="form-group">
          <label for="contact_number">Number:</label>
          <input class="form-control" id="contact_number" name="contact_number">
        </div>
        <button class="btn btn-primary" type="submit">add</button>
      </form>
    </div>
  </div>

</div>


<div class="main col-md-6">
  <h2>All Contacts</h2>
  <ul>
    <% @contact_list.each() do |contact| %>
      <li><a href="/contact/<%= contact.id() %>"> <%= contact.name() %> </a></li>
    <% end %>
  </ul>
</div>
